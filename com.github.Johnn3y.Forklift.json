{
  "id" : "com.github.Johnn3y.Forklift",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "42",
  "sdk" : "org.gnome.Sdk",
  "command" : "Forklift",
  "finish-args" : [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--share=network",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "add-extensions": {
      "org.freedesktop.Platform.ffmpeg-full": {
          "directory": "lib/ffmpeg",
          "version": "21.08",
          "add-ld-path": "."
      }
  },
  "cleanup-commands": [
      "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules" : [
    "shared-modules/lame/lame-3.99.5.json",
    {
      "name" : "youtube-dl",
      "buildsystem" : "simple",
      "ensure-writable" : [
        "/lib/python*/site-packages/easy-install.pth"
      ],
      "sources" : [
        {
          "url" : "https://github.com/ytdl-org/youtube-dl",
          "tag" : "2021.06.06",
          "commit" : "b224cf39d53bd16bcfda2ac493712c3ff449ecb8",
          "type" : "git"
        }
      ],
      "build-commands" : [
        "python3 setup.py build",
        "python3 setup.py install --prefix=/app"
      ]
    },
    {
        "name" : "libdazzle",
        "config-opts" : [
            "--libdir=/app/lib",
            "--buildtype=release"
        ],
        "buildsystem" : "meson",
        "builddir" : true,
        "cleanup" : [
            "/bin"
        ],
        "sources" : [
           {
                "type" : "git",
                "url" : "https://gitlab.gnome.org/GNOME/libdazzle.git",
                "tag" : "3.36.0",
                "commit" : "2f4d35523c61121eac0459e01b1510e46fe7f2c8"
            }
        ]
    },
    {
      "name" : "libhandy",
      "buildsystem" : "meson",
      "config-opts" : [
        "-Dexamples=false",
        "-Dtests=false"
      ],
      "sources" : [
        {
          "url" : "https://source.puri.sm/Librem5/libhandy",
          "tag" : "v0.0.13",
          "commit" : "7a193d7692c9c76a1a94f17c4d30b585f77d177c",
          "type" : "git"
        }
      ]
    },
    {
      "name" : "Forklift",
      "buildsystem" : "meson",
      "sources" : [
        {
          "url" : "https://github.com/Johnn3y/Forklift",
          "commit" : "9a1fa45d7a741cf518049b31f792b6d6c1ef9d13",
          "type" : "git"
        },
        {
          "type" : "patch",
          "path" : "fix-appdata.patch"
        }
      ]
    }
  ]
}
